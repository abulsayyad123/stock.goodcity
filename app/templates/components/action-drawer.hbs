{{#side-drawer hidden=(is-equal actionList.length 0) isOpen=isOpen small=small}}
  <div class="cmp action-drawer {{if small 'small'}}">
    <div class="action-holder">
      {{#each actionList as |act|}}
        <div class="action {{if act.enabled 'enabled' 'disabled' }}" {{action act.trigger}}>
          <div>{{fa-icon act.icon size='lg' }}</div>
          <div>{{ act.label }}</div>
        </div>
      {{/each}}
    </div>
  </div>
{{/side-drawer}}