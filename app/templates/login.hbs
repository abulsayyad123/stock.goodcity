<nav class="tab-bar">
  <section class="middle tab-bar-section">
    <h1 class="title">{{t "login.login"}}</h1>
  </section>
</nav>

{{#validatable-form class="form-horizontal login-form"}}
  <section class="main-section">
    <div class="row">
      <div class="small-12 columns">

        <div class="mobile">
          <div class="row">
            <div class="small-12 columns">
             <label class="form-label">{{t "login.hk_only"}}</label>
            </div>
          </div>

          <div class="row collapse">
            <div class="small-3 large-1 columns">
              <span class="prefix">+852</span>
            </div>
            <div class="small-9 large-11 columns">
              {{numeric-input value=mobilePhone name="mobilePhone" id="mobile" maxlength="8" required=true pattern=".{8,}" autoFocus=true}}
            </div>
          </div>
        </div>

      </div>
    </div>
    <div class="row">
      <div class="small-10 small-offset-1 columns">
        <button id="getsmscode" type="submit" class="button expand" {{action 'resendPin'}}>{{t "login.smscode"}}</button>
      </div>
    </div>
  </section>
{{/validatable-form}}
