<nav class="tab-bar new-user-nav">
  <section class="tab-bar-section">
    <h1 class="title">{{t 'organisation.add_user'}}</h1>
  </section>
</nav>

<section class="main-section new-user-section ui">
  {{#validatable-form onSubmit=(action 'saveUser') as |form|}}
    <div class="row">
      <div class="small-3 columns item-label">
        {{t 'organisation.user.first_name'}}
      </div>
      <div class="{{if isMobileApp 'small-7 large-8' 'small-9'}} columns">
        {{#form-control}}
          {{input type='text' value=firstName placeholder=fNamePlaceholder required='true'}}
          <div class='input-error'>First Name cannot be blank.</div>
        {{/form-control}}
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">
        {{t 'organisation.user.last_name'}}
      </div>
      <div class="{{if isMobileApp 'small-7 large-8' 'small-9'}} columns">
        {{#form-control}}
          {{input type='text' value=lastName placeholder=lNamePlaceholder required='true'}}
          <div class='input-error'>Family Name cannot be blank.</div>
        {{/form-control}}
      </div>
    </div>

    <div class="row mobile">
      <div class="small-2 columns item-label">
        {{t 'organisation.user.mobile'}}
      </div>
      <div class="small-1 columns ui dialing-code">
         <label>+852</label>
      </div>
      <div class="{{if isMobileApp 'small-7 large-8' 'small-9'}} columns">
        {{#form-control}}
          {{numeric-input value=mobilePhone name="mobilePhone" id="mobile" maxlength="8" placeholder=phoneNumberPlaceholder required='true' pattern=".{8,}" required='true'}}
          <div class='input-error'>{{t 'organisation.user.validation_error.mobile'}}</div>
        {{/form-control}}
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">
        {{t 'organisation.user.email'}}
      </div>
      <div class="{{if isMobileApp 'small-7 large-8' 'small-9'}} columns">
        {{#form-control}}
          {{input value=email name="email" id="email" type="email" placeholder=emailPlaceholder required='true'}}
          <div class='input-error'>{{t 'organisation.user.validation_error.email'}}</div>
        {{/form-control}}
      </div>
    </div>

    <div class="row">
      <div class="small-3 columns item-label">
        {{t 'organisation.user.position'}}
      </div>
      <div class="{{if isMobileApp 'small-7 large-8' 'small-9'}} columns">
        {{#form-control}}
          {{input type='text' value=position placeholder=positionPlaceholder required='true'}}
          <div class='input-error'>Position cannot be blank.</div>
        {{/form-control}}
      </div>
    </div>

    <div class="row">
      <div class="small-6 columns">
        <a {{action 'cancelForm'}} class="button secondary expand">{{t 'cancel'}}</a>
      </div>

      <div class="small-6 columns">
        <a {{action 'submit' target=form}} class="button expand">{{t 'save'}}</a>
      </div>
    </div>

  {{/validatable-form}}
</section>
