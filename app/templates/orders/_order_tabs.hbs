<section class="main-section order_tabs">
  <div class="row">
    <div class="small-12 columns tab_row">
      <dl class="tabs" data-tab>
        {{#if isActiveSummary}}
          {{#link-to 'orders.summary' model.id tagName="dd" classNames="small-3 medium-3 columns active text-center"}}
            {{#link-to 'orders.summary' model.id}}
              <i>{{fa-icon 'id-card'}}</i>
              <div>{{t "order_tabs.summary"}}</div>
            {{/link-to}}
          {{/link-to}}
        {{else}}
          {{#link-to 'orders.summary' model.id tagName="dd" classNames="small-3 medium-3 columns text-center"}}
            {{#link-to 'orders.summary' model.id}}
              <i>{{fa-icon 'id-card'}}</i>
              <div>{{t "order_tabs.summary"}}</div>
            {{/link-to}}
          {{/link-to}}
        {{/if}}

        {{#if isActiveGoods}}
          {{#link-to 'orders.items_list' model.id tagName="dd" classNames="small-3 medium-3 columns active text-center"}}
            {{#link-to 'orders.items_list' model.id}}
              <i class="item-menu">{{fa-icon 'shopping-basket'}}</i>
              <div>{{t "order_tabs.goods"}}</div>
            {{/link-to}}
          {{/link-to}}
        {{else}}
          {{#link-to 'orders.items_list' model.id tagName="dd" classNames="small-3 medium-3 columns text-center"}}
            {{#link-to 'orders.items_list' model.id}}
              <i class="item-menu">{{fa-icon 'shopping-basket'}}</i>
              <div>{{t "order_tabs.goods"}}</div>
            {{/link-to}}
          {{/link-to}}
        {{/if}}

        {{#link-to 'orders.order_types' model.id tagName="dd" classNames="small-3 medium-3 columns text-center"}}
          {{#link-to 'orders.order_types' model.id}}
            <i>{{fa-icon 'truck'}}</i>
            <div>{{t "order_tabs.logistics"}}</div>
          {{/link-to}}
        {{/link-to}}

        {{#link-to 'orders.conversation' model.id tagName="dd" classNames="small-3 medium-3 columns text-center"}}
          {{#link-to 'orders.conversation' model.id}}
            <i>{{fa-icon 'comments'}}</i>
            <div>{{t "order_tabs.chat"}}</div>
          {{/link-to}}
        {{/link-to}}
      </dl>
    </div>
  </div>
</section>
