<section class="left-small">
  {{#back-link fallbackRoute="orders" }}
    <i class="back_icon" aria-hidden="true">{{fa-icon 'angle-left'}}</i>
    <div>{{t "back"}}</div>
  {{/back-link}}
</section>

<section class="middle tab-bar-section">
  {{#if model.isShipmentOrder}}
    <h1 class="title"> {{model.code}}
      {{#if model.countryName}}
        - {{model.countryName}}
      {{/if}}
    </h1>
  {{else}}
    <h1 class="title">{{t "order_details.order"}} {{model.code}}</h1>
  {{/if}}
</section>
