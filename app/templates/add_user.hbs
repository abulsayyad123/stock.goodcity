<nav class="tab-bar new-user-nav">
  <section class="tab-bar-section">
    <h1 class="title">{{t 'organisation.add_user'}}</h1>
  </section>
</nav>

<section class="main-section add-user-form new-user-section ui ">
  {{#async-validatable-form onSubmit=(action 'saveUser') as |form|}}
  <div class="row">
    <div class="small-3 columns item-label">
      {{t 'organisation.user.first_name'}}
    </div>
    <div class="small-9 columns field-container">
      {{#form-control}}
      {{input type='text' value=firstName  required='true'}}
      <div class='input-error'>{{t 'organisation.user.validation_error.first_name'}}</div>
      {{/form-control}}
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns item-label">
      {{t 'organisation.user.last_name'}}
    </div>
    <div class="small-9 columns field-container">
      {{#form-control}}
      {{input type='text' value=lastName  required='true'}}
      <div class='input-error'>{{t 'organisation.user.validation_error.family_name'}}</div>
      {{/form-control}}
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns item-label">
      {{t 'users.image'}}
    </div>
    <div class="small-9 columns">
      <a {{action "triggerUpload"}} class="{{unless isReady 'disabled'}}">
        <span class="image-box">
          {{#if newUploadedImage}}
          <img src={{newUploadedImage.thumbImageUrl}} class="thumb" />
          {{else}}
          <i aria-hidden="true">{{fa-icon 'camera'}}</i><br />
          {{t 'users.add_image'}}
          {{/if}}
        </span>
      </a>
      {{cloudinary-upload ready="uploadReady" progress="uploadProgress"
                      always="uploadComplete" done="uploadSuccess" submit="uploadStart"}}
    </div>
  </div>

  <div class="row mobile">
    <div class="small-3 columns item-label">
      {{t 'organisation.user.mobile'}}
    </div>

    <div class="small-1 columns ui dialing-code">
      <label>{{t "mobile_prefix"}}</label>
    </div>

    <div class="small-8 columns field-container">
      {{#form-control}}
      {{numeric-input
        value=mobilePhone
        name="mobilePhone"
        id="mobile"
        required=activeUser
        maxlength="8"
        pattern=".{8,}"}}
      <div class='input-error'>{{t 'organisation.user.validation_error.mobile'}}</div>
      {{/form-control}}
    </div>
  </div>

  <div class="row">
    <div class="small-3 columns item-label">
      {{t 'organisation.user.email'}}
    </div>
    <div class="small-9 columns field-container">
      {{input value=email name="email" id="email" type="email"}}
    </div>
  </div>

  {{#if getCurrentUser.canDisableUsers}}
    <div class="row">
      <div class="small-3 columns item-label">
        {{t 'users.disabled'}}
      </div>
      <div class="small-9 columns field-container">
        {{#form-control}}
        {{input type="checkbox" checked=disabled}}
        {{/form-control}}
      </div>
    </div>
  {{/if}}

  {{#if allRoles.length}}
    <div class="row">
      <div class="small-3 columns item-label">
        {{t 'users.roles'}}
      </div>
      <div class="small-9 columns field-container">
        <ul class="radio-buttons">

          {{#each allRoles as |role|}}
            <li class="radio">
              {{check-box selected=role.id id=role.id name=role.name value=role.id selection=existingRoleIds action="setSelectedIds"}}
              <label class="radio-wrap small-only-text-center" for={{role.id}}>
                {{role.name}}
              </label>
            </li>
          {{/each}}
        </ul>

      </div>
    </div>

    {{#if displayOrganizationInput}}
      <div class="row">
        <div class="small-3 columns item-label">
          {{t 'users.organisation'}}
        </div>
        <div class="small-9 columns field-container" {{action "searchOrganization"}}>
          {{input type="text" name="organisation" value=organisationName required='true'}}
        </div>
      </div>
    {{/if}}
  {{/if}}

  <div class="row">
    <div class="small-6 columns">
      <a {{action 'cancelForm'}} class="button secondary expand">{{t 'cancel'}}</a>
    </div>

    <div class="small-6 columns">
      <a {{action 'submit' target=form}} class="button expand">{{t 'save'}}</a>
    </div>
  </div>

  {{/async-validatable-form}}
</section>
{{partial "loading_image"}}
