<div class="row fixed_search_header search-box ui organisations_search">
  <div class="small-2 medium-2 columns ">
    {{cancel-order order=model.order isCancel=false}}
  </div>

  <div class="small-10 medium-10 columns">
    {{focus-textfield
      name="searchText"
      id="searchText"
      value=searchText
      disabled=false}}

    {{#if hasSearchText}}
      <i {{action "clearSearch"}}>{{fa-icon 'times-circle'}}</i>
    {{/if}}
  </div>
</div>

<section class="main-section organisation_search_result">
  <div class="row search">
    <div class="small-12 columns">
      <div class="new-user">
        Which user is this request being made for ? {{#link-to 'index'}}New User{{/link-to}}
      </div>
      {{#if isLoading}}
        <div class="loading_screen">
          {{partial 'loading'}}
        </div>
      {{else}}
        {{#if filteredResults}}
          <ul class="list list-activity">
            {{#each filteredResults as |user|}}
              <li class="list-bottom">
                <div class="row" {{action 'goToRequestPurpose' user.id}}>
                  <div class="small-10 columns user_name">
                    {{user.fullName}}
                  </div>
                  <span class="small-2 columns user-mobile">
                    {{user.mobile}}
                  </span>
                </div>
                <div class="row org_name">
                  {{user.organisationsUsers.firstObject.organisation.nameEn}}
                </div>
              </li>
            {{/each}}
          </ul>
          {{log model.id}}
          {{#infinity-loader}}
          {{/infinity-loader}}

        {{else if hasNoResults}}
          <div class='no_result'>{{t "no_search_results"}}</div>
        {{/if}}
      {{/if}}
    </div>

  </div>
</section>

