<div class="row fixed_search_header search-box ui organisations_search">
  <div class="small-2 medium-2 columns ">
    <a {{action "cancelSearch"}} class="back">
      <i class="back_icon" aria-hidden="true">{{fa-icon 'angle-left'}}</i>
      <div class="back_text">
        Cancel
      </div>
    </a>
  </div>

  <div class="small-10 medium-10 columns">
    {{focus-textfield
      name="searchText"
      id="searchText"
      value=searchText
      disabled=false}}

    {{#if hasSearchText}}
      <i {{action "clearSearch"}}>{{fa-icon 'times-circle'}}</i>
    {{/if}}
  </div>
</div>

<section class="main-section organisation_search_result">
  <div class="row search">
    <div class="small-12 columns">
      {{#if isLoading}}
        <div class="loading_screen">
          {{partial 'loading'}}
        </div>
      {{else}}
        {{#if filteredResults}}
          <ul class="list list-activity">
            {{#each filteredResults as |user|}}
              <li>
                <div class="row" {{action 'goToRequestPurpose' user.id}}>
                  <div class="small-12 columns">
                    {{user.fullName}}
                  </div>
                </div>
              </li>
            {{/each}}
          </ul>
          {{log model.id}}
          {{#infinity-loader}}
          {{/infinity-loader}}

        {{else if hasNoResults}}
          <div class='no_result'>{{t "no_search_results"}}</div>
        {{/if}}
      {{/if}}
    </div>

  </div>
</section>

