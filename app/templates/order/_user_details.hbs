  </div>

  <div class="row info">
    <div class="small-4 columns">
      {{t "order.confirm_booking.your_details.position"}}
    </div>

    <div class="small-8 detail columns">
      {{model.organisationsUser.position}}
    </div>
  </div>

  <div class="row info">
    <div class="small-4 columns">
      {{t "order.confirm_booking.your_details.email"}}
    </div>

    <div class="small-8 detail columns">
      {{model.user.email}}
    </div>
