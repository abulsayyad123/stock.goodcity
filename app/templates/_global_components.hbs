{{!-- Service-backed components --}}

{{#let-alias designationService as |s|}}
  {{#if s.displayDesignateForm}}
    {{goodcity/designate-form
        quantity=s.designationQty
        maxQuantity=s.designatableQuantity
        confirmAction=s.completeDesignation
        cancelAction=s.resetOrderDesignation
        order=s.designationTargetOrder
        pkg=s.designationTargetPackage
        readyToDesignate=s.readyToDesignate
        showItemAvailability=s.showItemAvailability
        allowOrderChange=s.allowOrderChange
        allowItemChange=s.allowItemChange
        shippingNumber=s.shippingNumber
      }}
  {{/if}}

  {{goodcity/orders-search-overlay
      open=s.openOrderSearch
      onSelect=s.onOrderSelected
      searchProps=s.orderSearchProps
    }}
{{/let-alias}}

{{#let-alias organisationService as |s|}}
  {{goodcity/organisation-search-overlay
    open=s.openOrganisationSearch
    onSelect=s.onOrganisationSelect
  }}
{{/let-alias}}

{{#let-alias locationService as |s|}}
  {{goodcity/locations-search-overlay
    open=s.openLocationSearch
    onSelect=s.onLocationSelected
    options=s.locationSearchOptions
  }}
{{/let-alias}}

{{#let-alias packageTypeService as |s|}}
  {{goodcity/code-search-overlay
    open=s.openPackageTypeSearch
    storageType=s.packageTypeSearchOptions.storageType
    subsetPackageTypes=s.packageTypeSearchOptions.subsetPackageTypes
    headerText=s.packageTypeSearchOptions.headerText
    onSelect=s.onPackageTypeSelected
  }}
{{/let-alias}}

{{goodcity/item-search-overlay
  open=packageService.openPackageSearch
  associatedPackageTypes=packageService.packageSearchOptions.packageTypes
  storageTypeName=packageService.packageSearchOptions.storageTypeName
  searchMode=packageService.packageSearchOptions.searchMode
  onConfirm=packageService.onPackageSelected
}}

{{#let-alias offerService as |s|}}
  {{goodcity/offers-search-overlay
    open=s.openOfferSearch
    onSelect=s.onOfferSelected
    displayResults=s.displayResults
  }}
{{/let-alias}}
