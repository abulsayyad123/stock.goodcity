{{partial 'items/detail/tabs/_sub_tabs' }}
<div class="row">
  <div class="large-12 medium-12 small-12 columns add-item" align="center">
    <button class="button expand" {{action 'openItemsSearch' item}}
      disabled={{disableBoxPalletItemAddition}}>{{t 'box_pallet.add_to'}} {{item.storageTypeName}}</button>
  </div>
</div>
<div class="row">
  <div class="small-12 columns">
    <ul class="added-item-block">
      {{#each associatedPackages as |pkg|}}
        {{contained-package
          pkg=pkg
          entity=item
          onRemove=(action 'openLocationSearch')
        }}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row item-search-overlay">
  {{goodcity/item-search-overlay
    open=packageService.openItemSearch
    searchText=searchText
    associatedPackageTypes=associatedPackageTypes
    entity=packageService.entity
    onSingletonAdd=(action 'fetchContainedPackages')
    onConfirm=(action 'openAddItemOverlay')
  }}
</div>

<div class="row add-to-box">
  {{goodcity/add-item-overlay
    pkg=addableItem
    open=openAddItemOverlay
    entity=item
    onConfirm=(action 'fetchContainedPackages')
  }}
</div>
