{{#toggle-item-options-list}}
  <div class="small-6 large-8 columns name_details">
    <div class="ellipsis name one-line-ellipsis" style="display: inline!important;">{{item.inHandQuantity}} x {{item.code.name}}</div>
    <span class="available-designate-dispatch-count" style="margin-left: 0.25rem;">
      {{item.inHandQuantity}}/{{item.totalDesignatedQty}}/{{item.totalDispatchedQty}}
    </span>
    <div class="ellipsis two-line-ellipsis">
      {{item.notes}}
    </div>
  </div>
{{/toggle-item-options-list}}
