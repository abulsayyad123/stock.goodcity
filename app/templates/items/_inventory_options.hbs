<a {{action "toggleInventoryOptions"}} class="options-link">
  <i class="options">{{fa-icon 'ellipsis-v'}}</i>
</a>

<div class="options_menu_list {{if displayInventoryOptions '' 'hidden'}}">

  {{#unless autoGenerateInventory}}
    <div class="option_menu">
      <a {{action "autoGenerateInventoryNumber"}} >
        <i aria-hidden="true">{{fa-icon 'refresh'}}</i>
        {{t 'inventory_options.auto'}}
      </a>
    </div>
  {{/unless}}

  {{#unless inputInventory}}
    <div class="option_menu">
      <a {{action "editInventoryNumber"}} >
        <i aria-hidden="true">{{fa-icon 'keyboard'}}</i>
        {{t 'inventory_options.input'}}
      </a>
    </div>
  {{/unless}}

  {{#if isMobileApp}}
    <div class="option_menu">
      <a {{action "scanInventoryNumber"}}>
        <i aria-hidden="true">{{fa-icon 'barcode'}}</i>
        {{t 'inventory_options.scan'}}
      </a>
    </div>
  {{/if}}
</div>
