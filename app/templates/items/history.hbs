<div class="history">
  <div class="row">
    <div class="columns small-1 medium-1 large-1">
      {{#back-link fallbackRoute="items"}}
        <div class="item-page click-action-zone">
          <div class="back_link no-avatar">
            <i aria-hidden="true">{{fa-icon 'angle-left'}}</i>
          </div>
        </div>
      {{/back-link}}
    </div>
    <div class="columns small-11 medium-11 large-11 history-title">
      {{t "items.history"}}
    </div>
  </div>
  <div class="history-block">
    {{#if displayResults}}
      {{#infinite-list height="60vh" loadMore=(action "loadMoreActions") as |item_actions| }}
        {{#each item_actions as |item|}}
          <div class="row block-header">
            <div class="columns small-1">{{fa-icon 'paper-plane' }}</div>
            <div class="columns small-3">{{item.action}}</div>
            <div class="columns small-5 user-name">{{item.user.fullName}}</div>
            <div class="columns small-2">21 May '20</div>
          </div>
        {{/each}}
      {{/infinite-list}}
    {{/if}}
  </div>
</div>
