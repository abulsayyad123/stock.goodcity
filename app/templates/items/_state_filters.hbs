<div class="row">
  <div class="small-6 columns">
    <button {{action "applyFilters"}} class="button expand filter-btn">{{t "order_filters.apply_filter_button"}}</button>
  </div>
  <div class="small-6 columns">
    <div class="on-hand-filter-btn" {{action "applyOnHandFilter"}}>All on-hand items</div>
  </div>
</div>
<div class="state-filter-block">
  {{!-- Item State Block --}}
  <div class="row">
    <div class="type-filter-title small-12 medium-12 large-12 columns">
      {{t "item_filters.state_filter_title"}}
    </div>
  </div>
  <div class="row">
    {{#each stateFilters as |state|}}
      <div class='item-state small-5 medium-5 large-5 columns end {{if state.enabled "enabled"}}'>
        {{item-filter-checkbox name=state}}
      </div>
    {{/each}}
  </div>
  <div class="row">
    <hr/>
  </div>

  <div class="row">
    {{#each lossStateFilters as |state|}}
      <div class='item-state small-5 medium-5 large-5 columns end {{if state.enabled "enabled"}}'>
        {{item-filter-checkbox name=state}}
      </div>
    {{/each}}
  </div>
  <div class="row">
    <hr/>
  </div>

  {{!-- Item publish filters --}}
  <div class="row">
    <div class="publish-filter-title small-5 medium-4 large-4 columns">
      {{t "item_filters.publish_filter_title"}}
    </div>
    <div class="publish-filter-info small-7 medium-8 large-8 columns">
      {{t "item_filters.publish_filter_title_info"}}
    </div>
  </div>
  <div class="row item-filter-radiobutton">
    {{#each publishFilters as |publishState|}}
      <div class='checkbox small-4 medium-4 large-4 columns'>
        {{input id=publishState type="radio" name=publishState click=(action (mut publishFilter) publishState)}}
        <label class="radio-button-text" for={{publishState}}>
          <span class="type">{{t (concat "item_filters." publishState)}}</span>
        </label>
      </div>
    {{/each}}
  </div>
  <div class="row">
    <hr/>
  </div>

  {{!-- Image filter --}}
  <div class="row">
    <div class="image-filter-title small-3 medium-3 large-3 columns">
      {{t "item_filters.image_filter_title"}}
    </div>
    <div class="image-filter-info small-9 medium-9 large-9 columns">
      {{t "item_filters.image_filter_title_info"}}
    </div>
  </div>
  <div class="row item-filter-radiobutton">
    {{#each imageFilters as |imageState|}}
      <div class='checkbox small-4 medium-4 large-4 columns'>
        {{input id=imageState type="radio" name=imageState click=(action (mut imageFilter) imageState) value=imageFilter}}
        <label class="radio-button-text" for={{imageState}}>
          <span class="type">{{t (concat "item_filters." imageState)}}</span>
        </label>
      </div>
    {{/each}}
  </div>

</div>
