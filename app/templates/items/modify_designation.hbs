<div class="modify-designation-block">
  <div class="row">
    <div class="designation-header">
      {{t "modify_designation.designation_to"}} {{model.ordersPackage.designation.code}}
    </div>
  </div>
  <div class="row item-order-detail">
    <div class="columns small-2 medium-2 large-2 item-name">
      {{t "modify_designation.item"}}
    </div>
    <div class="columns small-3 medium-3 large-3 item-number">
      {{model.ordersPackage.item.inventoryNumber}}
    </div>
    <div class="columns small-7 medium-7 large-7 item-type ellipsis name one-line-ellipsis">
      {{model.ordersPackage.item.notes}}
    </div>
    <br/>
    <div class="columns small-2 medium-2 large-2 order-name">
      {{t "modify_designation.order"}}
    </div>
    <div class="columns small-3 medium-3 large-3 order-code">
      {{model.ordersPackage.designation.code}}
    </div>
    <div class="columns small-7 medium-7 large-7 order-organisation-name ellipsis name two-line-ellipsis">
      {{model.ordersPackage.designation.organisation.name}}
    </div>
  </div>
  <br/>
  <div class="row quantity-message">
    <div class="columns small-7 medium-5 qty-message">
      {{t "modify_designation.quantity_designated_to"}} {{model.ordersPackage.designation.code}}
    </div>
    <div class="columns small-4 max-qty">
      ({{t "modify_designation.maximum"}} {{model.ordersPackage.qtyToModify}})
    </div>
    <div class="columns small-4 max-qty">

    </div>
  </div>
  <br/>
  <div class="row">
    <div class="columns small-4 medium-8 ">
      <div class="columns small-10 medium-5 partial_undesignate_textfield">
        {{partial-undesignate-input id=model.ordersPackage.id designationPackage=model.ordersPackage}}
      </div>
    </div>

    <div class="columns small-4 medium-2">
      <button id="undesignateButton" type="submit" class="button expand" {{action "undesignateItem" model.ordersPackage}}>{{t 'save'}}</button>
    </div>
    <div class="columns small-4 medium-2 dont-modify">
      {{#link-to 'items.partial_undesignate' model.ordersPackage.item.id tagName='span' href=false}}
        <button class="button expand">{{t 'not_now'}}</button>
      {{/link-to}}
    </div>
  </div>
  <div class="row">
    <div class="columns small-12 medium-12 large-12 cancel-designation">
      <u {{action "displayUserPrompt" model.ordersPackage}}>{{t 'modify_designation.cancel'}}</u>
    </div>
  </div>
</div>

{{#message-box btn1Text=(t "undesignate.undesignate") btn1Callback=(action "undesignateItem" model.ordersPackage) btn2Text=(t "not_now") isVisible=modifyDesignatedQty classNames="popupOverlay designate-form"}}
  <p>{{t "designate.modify_designation" code=model.ordersPackage.designation.code}}</p>
{{/message-box}}
